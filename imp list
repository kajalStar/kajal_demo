    //   restoreFocus: false,
    //   autoFocus: false,
    // });
    // dialogRef.afterClosed().subscribe((searchFilter: IStore) => {
    //   if (!Utils.isNullOrUndefined(searchFilter)) {
    //     this.filter = searchFilter;
    //     this.onGotoPage(0);
    //     // this.updateSearchFilters(searchFilter);
    //   }
